<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Player Nationality Quiz</title>
  <link rel="stylesheet" href="/styles/main.css">
</head>

<body id="app">
  <h2>ENTER THE CORRECT NATIONALITY OF THE PLAYER SHOWN</h2>
  <form class="container" action="/submit" method="post">
    <div class="horizontal-container">
      <h3>
        Total Score:
        <span id="score">
          <%= typeof totalScore !== 'undefined' ? totalScore : "0" %>
        </span>
      </h3>
    </div>

    <h1 id="countryName">
      <%= question && question.name ? question.name : 'Player Not Found' %>
    </h1>
    
    <div class="answer-container">
      <input type="text" name="answer" id="userInput" 
             placeholder="Enter the nationality" 
             autofocus 
             autocomplete="off">
    </div>
    
    <button type="submit">
      SUBMIT
      <% if (typeof wasCorrect !== 'undefined' && wasCorrect) { %>
        <span class="checkmark">✔</span>
      <% } else if (typeof wasCorrect !== 'undefined' && wasCorrect === false) { %>
        <span class="cross" id="error">✖</span>
      <% } %>
    </button>
  </form>

  <script>
    // Safely handle potential undefined values
    const wasCorrect = "<%= typeof wasCorrect !== 'undefined' ? wasCorrect : '' %>";
    const totalScore = <%= typeof totalScore !== 'undefined' ? totalScore : 0 %>;

    if (wasCorrect === "false") {
      alert(`Game over! Final score: ${totalScore}`);
      document.getElementById("app").innerHTML = `
        <div class="game-over">
          <h2>Game Over! Final Score: ${totalScore}</h2>
          <a href="/" class="restart-button">Play Again</a>
        </div>
      `;
    }
  </script>

</body>
</html>


